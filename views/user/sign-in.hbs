<html>

<body>
    <div class="row">
        <div class="col-md-4 col-md-offset-4" style="border-right:1px solid gray; border-left:1px solid gray;">
            {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages}}
                        <p>
                            {{this}}
                        </p>
                    {{/each}}
                </div>
            {{/if}}

            <h1>Sign In</h1>
            <form action="/user/sign-in" method="post">
                <div class="form-group">
                    <label for="email">Username:</label>
                    <input type="text" id="user" name="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button type="submit" style="width:100%;" class="btn btn-primary">Sign In</button>
            </form>
            <hr>
            <a type="button" style="width:100%;" class="btn btn-success" href="/user/sign-up">Don't Have an Account? Sign Up</a>
        </div>
    </div>
</body>
</html>