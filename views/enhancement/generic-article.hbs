                                        <div class="panel-heading">
                                            <form action="/user/click-profile-article" method="POST">
                                                <input type="hidden" name="username" value="{{lookup ../users @index}}" />
                                                <button class="forum-submit" type="submit">{{lookup ../users @index}}</button> <div class="postNum">#{{@index}}</div>
                                            </form>
                                            {{id}}
                                        </div>
                                        <div class="panel-body comment-body">
                                            <p style="margin-top:-40px; margin-bottom:-50px;">{{lookup ../comments @index}}</p>
                                            <form action="/enhancement/reply-to-comment" method="POST" class="reply-form" style="float:right; margin-bottom:-30px;">
                                                <input type="hidden" name="commentContent" value="{{lookup ../ comments @index}}">
                                                <input type="hidden" name="commentUser" value="{{lookup ../users @index}}">
                                                <input type="hidden" name="commentDelete" value="{{this}}" />
                                                <input type="hidden" name="articleId" value="{{lookup ../loopID @index}}">
                                                <button>Reply</button>
                                            </form>
                                        </div>
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{else}}
                        <div id="article-comment-space">
                            {{#each comments}}
                                <div class="panel panel-primary" id="actual-article-comment">
                                    <div class="panel-heading">
                                        <form action="/user/click-profile-article" method="POST">
                                            <input type="hidden" name="username" value="{{lookup ../users @index}}" />
                                            <button class="forum-submit" type="submit">{{lookup ../users @index}}</button> <div class="postNum">#{{@index}}</div>
                                        </form>
                                        {{id}}
                                    </div>
                                    <div class="panel-body comment-body">
                                        <div class="reply">
                                            <p style="font-weight:bold; margin-top:-40px; margin-bottom:-30px;">{{lookup ../replyToMessage @index}}</p>
                                            <p style="margin-bottom:-40px;">{{lookup ../replies @index}}</p>
                                        </div>

                                        {{this}}
                                        <form action="/enhancement/reply-to-comment" method="POST" class="reply-form">
                                            <input type="hidden" name="commentContent" value="{{this}}">
                                            <input type="hidden" name="commentUser" value="{{lookup ../users @index}}">
                                            <input type="hidden" name="articleId" value="{{lookup ../loopID @index}}">
                                            <button>Reply</button>
                                        </form>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}
                {{/if}}
            {{#if article.allowComments}}
                {{#if goingToReply}}
                    {{#if comments}}<i>You must write something to comment</i>{{/if}}
                    <div style="margin-left:250px;">Replying to: {{replyTo}} comment - <div style="font-style:italic;">{{commentReplyTo}}</div></div>
                    <form action="/enhancement/make-article-comment" method="POST" id="comment-on-article">
                        <input type="hidden" name="userReplyTo" value="{{replyTo}}" />
                        <input type="hidden" name="commentReplyTo" value="{{commentReplyTo}}">
                        <input type="hidden" name="articleid" value="{{id}}" />
                        <input type="hidden" name="articleTitle" value="{{title}}">
                        <textarea id="commentArea" name="commentArea" cols="30" rows="10"></textarea> <br />
                        <button class="submitButton" id="submit">Post comment</button>
                    </form>
                {{else}}
                    {{#if comments}}<i>You must write something to comment</i>{{/if}}
                    <form action="/enhancement/make-article-comment" method="POST" id="comment-on-article">
                        <input type="hidden" name="userReplyTo" value="" />
                        <input type="hidden" name="commentReplyTo" value="">
                        <input type="hidden" name="articleid" value="{{id}}" />
                        <input type="hidden" name="articleTitle" value="{{title}}">
                        <textarea id="commentArea" name="commentArea" cols="30" rows="10"></textarea> <br />
                        <button class="submitButton" id="submit">Post comment</button>
                    </form>
                {{/if}}
            {{else}}
                Comments are closed for this article
            {{/if}}

        {{else}}
            {{#if comments}}
                {{#if replyToMessage}}
                    <div id="article-comment-space">
                        {{#each replyToMessage}}
                            {{#if this}}
                                <div class="panel panel-primary" id="actual-article-comment">
                                    <div class="panel-heading">
                                        <form action="/user/click-profile-article" method="POST">
                                            <input type="hidden" name="username" value="{{lookup ../users @index}}" />
                                            <button class="forum-submit" type="submit">{{lookup ../users @index}}</button> <div class="postNum">#{{@index}}</div>
