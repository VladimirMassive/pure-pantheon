                                            </form>
                                            {{id}}
                                        </div>
                                        <div class="panel-body comment-body">
                                            <div class="reply" style="padding-left:10px;">
                                                <p style="font-weight:bold; margin-top:-40px; margin-bottom:-30px;">Originally Posted By: {{this}}</p>
                                                <p style="margin-bottom:-40px;">{{lookup ../replies @index}}</p>
                                            </div>
                                            <p style="margin-bottom:-70px;">{{lookup ../comments @index}}</p>

                                            <form action="/enhancement/reply-to-comment" method="POST" class="reply-form" style="float:right; margin-bottom:-30px;">
                                                <input type="hidden" name="commentContent" value="{{lookup ../ comments @index}}">
                                                <input type="hidden" name="commentUser" value="{{lookup ../users @index}}">
                                                <input type="hidden" name="articleId" value="{{lookup ../loopID @index}}">
                                                <button>Reply</button>
                                            </form>
                                        </div>
                                    </div>
                                {{else}}
